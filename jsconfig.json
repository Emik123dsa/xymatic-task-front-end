{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "target": "es6",
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/app/*"],
      "@styles/*": ["./src/assets/styles/*"],
      "@img/*": ["./src/assets/img/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "target": "es6",
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/app/*"],
      "@styles/*": ["./src/assets/styles/*"],
      "@img/*": ["./src/assets/img/*"],
      "react-dom": ["@hot-loader/react-dom"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__/**/*.test.js", "src/**/*.test.js"]
}
